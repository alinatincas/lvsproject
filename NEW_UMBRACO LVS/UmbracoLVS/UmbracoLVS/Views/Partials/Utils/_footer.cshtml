            </div>
        </div>
        <div class="col-md-4 pt-md-3 p-lg-5">
            <h3 class="footer-h">Genvej</h3>
            <div class="shortcuts">
                <a href="/">Forside</a>
                <br />
                @{
                    foreach (var page in root.Children.Where("Visible"))
                    {
                        if (@page.Url == "/soeg/")
                        {
                            continue;
                        }
