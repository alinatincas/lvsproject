            </div>
        </section>

<section class="container clearance">
    
    
    @foreach (Publication p in publications)
    {
    <div class="row">
        <div class="col-md-5">
            <a href="@p.Url">
                <img src="@p.Image.Url?width=400" alt="@p.Headline" />
            </a>
        </div>
        <div class="col-md-7">
            <h3>@p.Headline</h3>
            <p>@p.Description</p>
        </div>
    </div>
    }
</section>
