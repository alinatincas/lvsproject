@inherits Umbraco.Web.Mvc.UmbracoTemplatePage<ContentModels.Publication>
@using ContentModels = Umbraco.Web.PublishedContentModels;
@{
    Layout = "_Master.cshtml";
}
<div class="hero-image hero-image" style="background-image: url('@Model.Content.Image.Url')">
    <div class="overlay d-flex align-items-center justify-content-center">
        <h1 class="header-title-white">
            @Html.Raw(Model.Content.Headline)
        </h1>
    </div>
</div>
<section class="container-fluid bg-light">
    <!-- STAR DESCRIPTION -->
    <section class="container clearance-grey">
        <h3 class="text-center">@Model.Content.Headline</h3>
        @Html.GetGridHtml(Model.Content, "content")
    </section>
    <!-- END DESCRIPTION -->
</section>
<!-- START WHITE SECTION -->
<section class="container pt-3">
    <div class="container">
        <h3 class="text-center">DU KAN BESTILLE BOGEN HER</h3>
        <p>
            Bogen kan købes på linket nedenfor og koster 100 kr. pr. bog + forsendelse.
        </p>
        <p>
            Et mindre ekspeditionsgebyr samt forsendelsesomkostninger må påregnes. Ved bestilling af publikationer påført en pris vil
            forsendelsen først ske, når indbetalingen er modtaget.
        </p>
    </div>
    <h4 class="text-center">Indbetaling sker til følgende konto i Spar Nord Bank:</h4>
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form>
                <fieldset class="col-6-md">
                    <div class="form-group row">
                        <div class="col-md-2">
                            <label> Reg.nr.: </label>
                        </div>
                        <div class="col-md-10 form-field">
                            <input type="number" class="form-control" value="9196" disabled>
                        </div>

                        <div class="col-md-2">
                            <label> Kontonr: </label>
                        </div>
                        <div class="col-md-10 form-field">
                            <input type="number" class="form-control" value="4582510887" disabled>
                        </div>
                        <div class="col-md-2">
                            <label> Navn: </label>
                        </div>
                        <div class="col-md-10 form-field">
                            <input type="text" class="form-control">
                        </div>
                        <div class="col-md-2">
                            <label> Adresse: </label>
                        </div>
                        <div class="col-md-10 form-field">
                            <input type="text" class="form-control">
                        </div>
                        <div class="col-md-2">
                            <label> Postnr.: </label>
                        </div>
                        <div class="col-md-10 form-field">
                            <input type="number" class="form-control">
                        </div>
                        <div class="col-md-2">
                            <label> By: </label>
                        </div>
                        <div class="col-md-10 form-field">
                            <input type="text" class="form-control">
                        </div>
                        <div class="col-md-2">
                            <label> Telefon: </label>
                        </div>
                        <div class="col-md-10 form-field">
                            <input type="number" class="form-control">
                        </div>
                        <div class="col-md-2">
                            <label> E-mail: </label>
                        </div>
                        <div class="col-md-10 form-field">
                            <input type="email" class="form-control">
                        </div>
                        <div class="col-md-12 d-flex justify-content-end">
                            <input type="submit" class="submit-button" value="Indsend">
                        </div>
                    </div>


                </fieldset>

            </form>
        </div>
    </div>

</section>
<!-- END SECTION  -->
